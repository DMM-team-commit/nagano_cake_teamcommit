<div class="container">
  <div class="row align-items-center">

      <div class="row">
        <div class="col-md-6">
          <%= image_tag @item.get_image(350,250) %>
        </div>
        <div class="row-md-6 text-start">
          <p class="h2 mb-4"><%= @item.name %></p>
          <div class="col mb-5"> <%= @item.description %></div>
          <p class="h4 mb-4">￥<%= @item.with_tax_price.to_s(:delimited) %>（税込）</p>
            <%= form_with model: @cart_item, url: cart_items_path do |f| %>
              <%= f.hidden_field :customer_id, :value => current_customer.id %>
              <%= f.hidden_field :item_id, :value => @item.id %>
              <div class="row ml-2">
                <%= f.select :item_amount, *[1..10] %>
                <div class="col">
                  <%= f.submit 'カートに入れる', class: "btn btn-sm btn-outline-secondary" %>
                </div>
              </div>
            <% end %>
          </div>
      </div>
  </div>