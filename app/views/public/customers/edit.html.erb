<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>会員情報編集</h2>
    <%= form_with model:@customer, local:true do |f| %>
      <%#= render 'layouts/errors', obj: @user %>
      <div class="form-group">
        <%= "会員ID" %>
        <%= @customer.id %>
      </div>
      <div class="form-group">
        <%= f.label :last_name ,"氏名" %>
        <%= f.text_field :last_name, class: "form-control name" %><%= f.text_field :first_name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :last_name_kana, "フリガナ" %>
        <%= f.text_field :last_name_kana, class: "form-control name" %><%= f.text_field :first_name_kana, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :post_code ,"郵便番号" %>
        <%= f.text_field :post_code, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.label :address %>
        <%= f.text_area :address, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.label :phone %>
        <%= f.text_field :phone, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_area :email, class: "form-control introduction" %>
      </div>
      <div class="form-group"><!--会員ステータス-->
        <%= f.label :introduction %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit "変更を保存" class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>
