<%= render 'layouts/header' %>
<div class = "container" >
 <div class = "row" >
  <div class = "mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
    <strong>新規会員登録</strong>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    
    <div class="field">
      <%= "お名前" %>
      <%= "(姓)" %><%= f.text_field :last_name, autofocus: true, class: "name" %>
      <%= "(名)" %><%= f.text_field :first_name, autofocus: true, class: "name" %>
    </div>
    
    <div class="field">
    <%= "フリガナ" %>
    <%= "(セイ)" %><%= f.text_field :last_name_kana, autofocus: true, class: "name" %>
    <%= "(メイ)" %><%= f.text_field :first_name_kana, autofocus: true, class: "name" %>
    </div>
    
    <div class="field">
      <%= "メールアドレス" %>
      <%= f.email_field :email %>
    </div>
    
    <div class="field">
      <%= "郵便番号(ハイフンなし)" %>
      <%= f.text_field :post_code %>
    </div>
    
    <div class="field">
      <%= "住所" %>
      <%= f.text_field :address %>
    </div>
    
    <div class="field">
      <%= "電話番号(ハイフンなし)" %>
      <%= f.text_field :address %>
    </div>
    
    <div class="field">
      <%= "パスワード(6文字以上)" %>
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
    
    <div class="field">
      <%= "パスワード(確認用)" %>
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    
    <div class="actions">
      <%= f.submit "新規登録" %>
    </div>
    <% end %>
    
    
    <strong>既に登録済の方</strong>
    <%= link_to "こちら" %>
    <%= render "public/shared/links" %>
  </div>
 </div>
</div>

