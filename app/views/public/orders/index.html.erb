<div class = "container">
    <h1>注文履歴一覧</h1>
</div>
<div>
<table class = "table table-bordered" >
    <tr>
        <td scope =　"col">注文日</td>
        <td scope =　"col">配送先</td>
        <td scope =　"col">注文商品</td>
        <td scope =　"col">支払金額</td>
        <td scope =　"col">ステータス</td>
        <td scope =　"col">注文詳細</td>
    </tr>
    <% @orders.each do |order| %>
    <tr>
        <td>
            <%= order.updated_at.strftime('%Y/%m/%d') %>
        </td>
        <td>
            〒<%= order.post_code %><br>
            <%= order.address %><br>
            <%= order.name %>
        </td>
        <td><% order.order_details.each do |item| %>
        <%= item.item.name %><br>
        <% end %>
        </td>
        <td><%= order.total_payment.to_s(:delimited) %></td>
        <td><%= order.status_i18n %></td>
        <td><%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %></td>
    </tr>
   <% end %>
</table>
</div>