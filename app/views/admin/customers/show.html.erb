<div class='container px-5 px-sm-0'>
  <div class='row' style="margin-top:25px;">
    <div class="col-sm-10 px-sm-0 mx-auto">
        <h1 class="mb-3"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h1>
        <table class='table text-secondary'>
          <tbody>
          <tr>
        	  <th>会員ID</th>
        	  <th><%= @customer_id %></th>
          </tr>
          <tr>
        	  <th>氏名</th>
        	  <th><%= @customer.last_name %><%= @customer.first_name %></th>
          </tr>
          <tr>
        	  <th>フリガナ</th>
        	  <th><%= @customer.last_name_kana %><%= @customer.first_name_kana %></th>
          </tr>
          <tr>
        	  <th>郵便番号</th>
        	  <th><%= @customer.post_code %></th>
          </tr>
          <tr>
        	  <th>住所</th>
        	  <th><%= @customer.address %></th>
          </tr>
          <tr>
        	  <th>電話番号</th>
        	  <th><%= @customer.phone %></th>
          </tr>
          <tr>
        	  <th>メールアドレス</th>
        	  <th><%= @customer.email %></th>
          </tr>
          <tr>
        	  <th>会員ステータス</th>
              <th><% if @customer.is_deleted == false %>
                  <b class="text-success font-weight-bold">有効</b>
                <% else %>
                  <b class="text-muted font-weight-bold">退会</b>
                <% end %>
              </th>
          </tr>
        </table>
        <%= link_to "編集する", edit_admin_customer_path, class:"btn btn-success ml-4" %>
        <%= link_to "注文履歴一覧を見る", orders_path, class: "btn btn-primary ml-4" %>
    </div>
  </div>
</div>


