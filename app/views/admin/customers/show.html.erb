<h2>顧客詳細</h2>
<table class='table'>
  <tr>
	  <th>会員ID</th>
	  <th><%= @customer_id %></th>
  </tr>
  <tr>
	  <th>氏名</th>
	  <th><%= @customer.last_name %><%= @customer.first_name %></th>
  </tr>
  <tr>
	  <th>フリガナ</th>
	  <th><%= @customer.last_name_kana %><%= @customer.first_name_kana %></th>
  </tr>
  <tr>
	  <th>郵便番号</th>
	  <th><%= @customer.post_code %></th>
  </tr>
  <tr>
	  <th>住所</th>
	  <th><%= @customer.address %></th>
  </tr>
  <tr>
	  <th>電話番号</th>
	  <th><%= @customer.phone %></th>
  </tr>
  <tr>
	  <th>メールアドレス</th>
	  <th><%= @customer.email %></th>
  </tr>
  <tr>
	  <th>会員ステータス</th>
	  <th><%= "有効、無効" %></th>
  </tr>
</table>
　
<div class='row'>
  <%= link_to"編集する" edit_user_path(user), class: "btn btn-outline-secondary btn-block" %>
  <%= link_to "注文履歴一覧を見る" edit_user_path(user), class: "btn btn-outline-secondary btn-block" %>
</div>