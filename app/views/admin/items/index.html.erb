<div class="container">
  <div class="row">
     <h4 class="col-md-3">商品一覧</h4>
     <div class="col-md-1">
      <%= link_to new_admin_item_path do %>
        <button class="btn-secondary rounded-circle" >+</button>
      <% end %>
     </div>
   </div>
   <div class="row">
      <table class="table">
          <thead>
              <tr>
                <th>商品ID</th>
                <th>商品名</th>
                <th>税抜価格</th>
                <th>ジャンル</th>
                <th>ステータス</th>
              </tr>
          </thead>
          <tbody>
            <% @items.each do |item| %>
              <tr>
                <td><%= item.id %></td>
                <td><%= link_to item.name, admin_item_path(item.id) %></td>
                <td><%= item.price %></td>
                <td><%= item.genre.name %></td>
                <td>
                  <% if item.is_active == false %>
                    販売停止中
                  <% else %>
                    販売中
                  <% end %>
                </td>
              </tr>
             <% end %>
          </tbody>
      </table>

</div>
