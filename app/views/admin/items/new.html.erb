<div class="container">
  <div>
  <h2>商品新規登録</h2>
  <%= form_with model: [:admin, @item] do |f| %>
       <div class="col-md-3">
        <label for="iimage" class="col-form-label">商品画像</label>
      </div>
      <div class="col-md-3">
        <%= f.file_field :image, accept: "image/*"%>
      </div>
      <div class="col-md-3">
        <label for="item_name" class="col-form-label">商品名</label>
      </div>
      <div class="col-auto">
        <%= f.text_field :name %>
      </div>
      <div class="col-md-3">
        <label for="item_description" class="col-form-label">商品説明</label>
      </div>
      <div class="col-md-3">
        <%= f.text_area :description %>
      </div>

      <div class="col-md-3">
        <label for="genre" class="col-form-label">ジャンル</label>
      </div>
      <div class="col-md-3">
        <%= f.collection_select :genre_id, Genre.all, :id, :name %>
      </div>


      <div class="col-md-3">
        <label for="price" class="col-form-label">販売価格</label>
      </div>
      <div class="col-md-3">
        <%= f.number_field :price %>
      </div>
      <div class="col-md-3">
        <label for="status" class="col-form-label">販売ステータス</label>
        <%= f.radio_button :is_active, :true %>
        <%= label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
        <%= f.radio_button :is_active, :false %>
        <%= label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
      </div>
        <%= f.submit "新規登録" ,class: 'btn btn-sm btn-outline-secondary' %>
  <% end %>
  </div>
</div>