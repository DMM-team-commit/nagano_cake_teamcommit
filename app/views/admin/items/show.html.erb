<div class="container">
  <div class="row">
    <div class="colcol-md-3">
      <h4>商品詳細</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
       <%= image_tag @item.get_image(200,200) %>
    </div>
    <div class="col-md-9">
        <p>商品名</p>
        <h3><%= @item.name %></h3>
      <div class="mb-3 row">
        <p class="col-md-3">商品説明</p>
        <h5 class="col-md-5">
          <%= @item.description %>
        </h5>
      </div>
      <div class="mb-3 row">
        <p class="col-md-3">ジャンル</p>
        <h5 class="col-md-5">
         <%= @item.genre.name %>
        </h5>
      </div>
      <div class="mb-3 row">
        <p class="col-md-3">税込価格<br>(税抜価格)</p>
        <h5 class="col-md-5 d-flex align-items-center">
            <%= @item.with_tax_price %>
            （<%= @item.price %>）円
        </h5>
      </div>
      <div class="mb-3 row">
        <p class="col-md-3">販売ステータス</p>
        <h5 class="col-md-5">
          <% if @item.is_active == false %>
            <strong class="text-red">販売停止中</strong>
          <% else %>
            <strong class="text-success">販売中</strong>
          <% end %>
        </h5>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 offset-md-5">
      <div><%= link_to "編集する", edit_admin_item_path, class: "btn btn-lg btn-success" %></div>
    </div>
  </div>
</div>
